<div class="container mt-5">
    <div class="row">
        {{#each users}}
        <div class="col-md-4">

            <div class="card border-dark drone-card">

                <div class="card-body">
                    <p class="card-title"><strong>{{username}}</strong></p>


                    <p class="card-text">{{role}}</p>



                    <a href="/users/{{id}}" class="btn btn-success btn-sm">Details</a>


                    {{#if ../roles.isHIEROPHANT}}

                    <a href="/users/{{id}}/edit" class="btn btn-warning btn-sm">Edit</a>

                    <hr>
                    <form action="/admin/{{id}}/initiate" method="POST" style="display: inline-block">
                        <input type="submit" value="Initiate" class="btn btn-info btn-sm">
                    </form>
                    <form action="/admin/{{id}}/elevate" method="POST" style="display: inline-block">
                        <input type="submit" value="Elevate" class="btn btn-info btn-sm">
                    </form>

                    {{/if}}

                </div>
            </div>

        </div>

        {{/each}}
    </div>
</div>