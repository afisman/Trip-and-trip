<div class="container  mt-5">
    <h2>{{organizer.username}}</h2>
    <p>{{description}}</p>
    <p>Attendees:</p>
    <ul>
        {{#each attendees}}
        <li>{{username}}</li>
        {{/each}}
    </ul>
    <p>{{date}}</p>
    <ul>
        {{#each plants}}
        <li>{{cName}}</li>
        {{/each}}

    </ul>
    <a href="/events/{{id}}/edit" class="btn btn-warning btn-sm">Edit</a>
    <form action="/events/{{id}}/join" method="POST" style="display: inline-block">
        <input type="submit" value="join" class="btn btn-success btn-sm">
    </form>
    <form action="/events/{{id}}/delete" method="POST" style="display: inline-block">
        <input type="submit" value="delete" class="btn btn-danger btn-sm">
    </form>

</div>