<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edit {{cName}}</h1>
            <hr>

            <form action="/plants/{{id}}/edit" method="POST" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="sName" class="form-label">Scientific name: </label>
                    <input type="text" class="form-control" id="sName" name="sName" value="{{sName}}">
                </div>

                <div class="mb-3">
                    <label for="cName" class="form-label">Common name:</label>
                    <input type="text" class="form-control" id="cName" name="cName" value="{{cName}}">
                </div>

                <div class="mb-3">

                    <p>Region:</p>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Africa" id="flexCheckDefault"
                            name="region" />
                        <label class="form-check-label" for="flexCheckDefault">Africa</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="America" id="flexCheckDefault"
                            name="region" />
                        <label class="form-check-label" for="flexCheckDefault">America</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Asia" id="flexCheckDefault"
                            name="region" />
                        <label class="form-check-label" for="flexCheckDefault">Asia</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Europe" id="flexCheckDefault"
                            name="region" />
                        <label class="form-check-label" for="flexCheckDefault">Europe</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Oceania" id="flexCheckDefault"
                            name="region" />
                        <label class="form-check-label" for="flexCheckDefault">Oceania</label>
                    </div>

                </div>

                <div class="mb-3">
                    <label for="culture" class="form-label">Culture:</label>
                    <input type="text" class="form-control" id="culture" name="culture" value="{{culture}}">
                </div>

                <div class="mb-3">

                    <label for="formFileMultiple" class="form-label">Files:</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="img" multiple>

                </div>

                <div class="mb-3">

                    <p>Properties:</p>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Psychedelic" id="flexCheckDefault"
                            name="properties" />
                        <label class="form-check-label" for="flexCheckDefault">Psychedelic</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Medicinal" id="flexCheckDefault"
                            name="properties" />
                        <label class="form-check-label" for="flexCheckDefault">Medicinal</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="Toxic" id="flexCheckDefault"
                            name="properties" />
                        <label class="form-check-label" for="flexCheckDefault">Toxic</label>
                    </div>

                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <input type="text" class="form-control" id="description" name="description" value="{{description}}">
                </div>

                <button type="submit" class="btn btn-dark">Edit plant</button>

            </form>

        </div>

    </div>

</div>