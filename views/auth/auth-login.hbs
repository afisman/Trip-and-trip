<div class="hero">
    <div class="container">

        <div class="row justify-content-center">

            <div class="col-md-6">

                <h1 class="headerLoginForm">Login when you are ready</h1>

                <form action="/login" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>

                    <div class="mb-3">
                        <label for="pwdInput" class="form-label">Password</label>
                        <input type="password" class="form-control" id="pwdInput" name="userPwd">
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="buttonBlue">Login</button>
                    </div>

                    {{#if errorMessage}}
                    <div id="error">{{{errorMessage}}}</div>
                    {{/if}}

                </form>

            </div>

        </div>

    </div>
</div>